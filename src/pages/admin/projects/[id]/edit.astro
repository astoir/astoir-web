---
import Layout from "~layouts/BaseLayout.astro";
import ProjectForm from "~components/Form/ProjectForm";
import MDXEditor from "~components/Editor/MDXEditor";
import { IoArrowBack } from "react-icons/io5";
import { getProjects } from "~utils/getProjects";

export async function getStaticPaths() {
  const projects = await getProjects();

  const postResult = projects.map(project => ({
    params: { id: project.id },
    props: { project },
  }));

  return postResult;
}

const { project } = Astro.props;
---

<Layout title="프로젝트 수정">
  <div class="mx-auto w-full max-w-5xl px-4 py-8 sm:px-6 lg:px-8">
    <!-- 헤더 -->
    <div class="mb-8">
      <a
        href="/admin/projects"
        class="mb-4 inline-flex items-center gap-1 text-sm text-black-muted hover:text-skin-accent"
      >
        <IoArrowBack />
        <span>프로젝트 목록으로</span>
      </a>
      <h1 class="text-3xl font-bold text-black-accent">프로젝트 수정</h1>
      <p class="mt-2 text-black-muted">프로젝트 정보를 수정합니다</p>
    </div>

    <div class="space-y-8">
      <ProjectForm client:load initialData={project} />

      <!-- 상세 설명 -->
      <div class="rounded-lg border border-skin-line bg-white p-6">
        <h2 class="mb-6 text-xl font-semibold text-black-accent">상세 설명</h2>
        <MDXEditor
          client:load
          markdown={project.body as string}
          onChange={value => console.log(value)}
          placeholder="프로젝트에 대해 자세히 설명해주세요..."
        />
      </div>

      <!-- 제출 버튼 -->
      <div class="flex justify-end gap-3">
        <a
          href="/admin/projects"
          class="rounded-lg border border-skin-line px-4 py-2 text-sm font-medium text-black-base hover:bg-skin-fill"
        >
          취소
        </a>
        <button
          type="submit"
          class="text-white rounded-lg bg-skin-accent px-4 py-2 text-sm font-medium hover:bg-skin-accent/90"
        >
          저장하기
        </button>
      </div>
    </div>
  </div>
</Layout>
