---
// src/pages/new-project.astro
import Layout from "~layouts/BaseLayout.astro";
import ProjectForm from "~components/Form/ProjectForm";
import AdminOnly from "~components/Auth/AdminOnly";
---

<Layout title="새 프로젝트" useScrollHide={false}>
  <AdminOnly client:load>
    <div class="mx-auto w-full max-w-5xl px-4 py-8 sm:px-6 lg:px-8">
      <!-- 헤더 -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-black-accent">새 프로젝트</h1>
        <p class="mt-2 text-black-muted">새로운 프로젝트를 등록합니다</p>
      </div>
      <ProjectForm client:only="react" />
    </div>
  </AdminOnly>
</Layout>
